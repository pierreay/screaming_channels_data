# * External repositories

# Original Screaming Channels repository. 
export SC_POC=$HOME/git/screaming_channels_poc

# Screaming Channels repository. 
export SC=$HOME/git/screaming_channels_ble

# Screaming Channels source directory containing Python modules. 
export SC_SRC=$SC/src

# Nimble firmware repository. 
export NIMBLE=$HOME/git/screaming_channels_nimble

# * Interal paths

# Dataset repository root.
export REPO_ROOT="$(realpath .)"

# * Custom Python environment

# Allows to import Screaming Channels Python modules in scripts here.
export PYTHONPATH=$SC_SRC

# Allows loading of custom libraries (e.g., HEL).
export LD_LIBRARY_PATH="/usr/local/lib"
